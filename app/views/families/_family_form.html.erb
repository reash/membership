<%= form_tag({:controller => :familes, :action => :update_family}, {:method => :get, :name => :fname}) %>

  <div class="field">
    name <br>
    <%= text_field_tag 'Family', @family.name%>
  </div>
  <div class="field">
    Head of Family 
    <%= f.number_field :main_person %>
    <% if @family.main_person_id? %>
      <%= @family.main_person.first_name %> <%= @family.main_person.last_name %>
    <% else %>
      Not Assigned
    <% end %>
  </div>
  <div class="actions">
    <%= submit_tag %>
  </div>
</form>
