  <table>
    <tr>
      <td>First Name</td>
      <td><%= text_field :member, :first_name, size: 40 %></td>
    </tr>
    <tr>
      <td>Middle Name</td>
      <td><%= text_field :member, :middle_name, size: 40 %></td>
    </tr>
    <tr>
      <td>Last Name</td>
      <td><%= text_field :member, :last_name, size: 40 %></td>
    </tr>
    <tr>
      <td>Gender</td>
      <% if !@member.male %>
        <td>Male <%= radio_button_tag('gender', 'male', false) %> Female <%= radio_button_tag('gender', 'female', true) %> </td>
      <% else %>
        <td>Male <%= radio_button_tag('gender', 'male', true) %> Female <%= radio_button_tag('gender', 'female', false) %> </td>
      <% end %>
    </tr>
    <tr>
      <td>Birthday</td>
      <td><%= date_select :birth, 'birthday', default: @member.birthday, start_year: 1900 %> </td>
    </tr>
    <tr>
      <td>Relationship</td>
      <td><%= select( :member, :relationship, Relationship.all.collect {|p| [ p.relationship, p.relationship ] }) %> </td>
    </tr>
  <table>
